@model YetAnotherDemo.Models.AccountViewModel;

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="jumbotron" style="margin-top: 3rem;">
        <h1 class="display-2">Change Password</h1>

        <form asp-action="ChangePassword" asp-controller="Account" method="post">
            <div class="form-group">
                <label>Password</label>
                @Html.PasswordFor(m => m.Account.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Account.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Confirm password</label>
                @Html.PasswordFor(m => m.Account.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Account.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Change password</button>
            <div class="text-danger" style="margin-top: 1rem;">
                @ViewBag.Message
            </div>

        </form>
    </div>

